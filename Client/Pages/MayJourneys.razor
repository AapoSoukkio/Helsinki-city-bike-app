@page "/mayjourneys"
@using Solita.HelsinkiBikeApp.Shared
@using Microsoft.AspNetCore.Components.Web.Virtualization
@inject HttpClient Http

<h1>May Journeys</h1>

<Table>
    <TableHeader>
        <tr>
            <th>Departure</th>
            <th>Return</th>
            <th>Departure Station Name</th>
            <th>Return Station Name</th>
            <th>Covered Distance</th>
            <th>Duration</th>
        </tr>
    </TableHeader>
    <TableBody>
          @if (mayJourneys != null)
        {
            @foreach (var journey in mayJourneys)
            {
                <tr>
                    <td>@journey.Departure</td>
                    <td>@journey.Return</td>
                    <td>@journey.DepartureStationName</td>
                    <td>@journey.ReturnStationName</td>
                    <td>@journey.CoveredDistance</td>
                    <td>@journey.Duration</td>
                </tr>
            }
        }
    </TableBody>
</Table>

@code {
     private MayJourney[]? mayJourneys;

    protected override async Task OnInitializedAsync()
    {
        mayJourneys = await Http.GetFromJsonAsync<MayJourney[]>("mayjourney/gethundred");
    }
}